{% macro tfwmdsContentCardSwiftCard(params) %}
{# imports #}
{% from "tfwmds/components/content-card/_content-card.njk" import tfwmdsContentCard %}
{# Set #}
{% set title = params.title if params.title else "How to get Swift pay as you go" %}
{% set content = params.content %}
{% set img = params.img if params.img else "/img/component-images/content-cards/swift-card.png"%}
{# Set up nav links #}

{% call tfwmdsContentCard() %}
    <nav class="tfwmds-p-sm">
        <h2 class="tfwmds-content-card__title">{{title}}</h2>
        <div class="tfwmds-grid tfwmds-grid--spacing-md-2-md">
            <div class="tfwmds-col-1 tfwmds-col-md-1-3">
                <img src="{{img}}" alt="">
            </div>
            <div class="tfwmds-content-card__content tfwmds-col-1 tfwmds-col-md-2-3">
                {% if content %}
                    {{content}}
                {% else %}
                    <ul>
                        <li>You can <a href="#">order a pay as you go Swift card online</a> and we will send you one within 7 days.</li>
                        <li>If you need a Swift card more quickly, you can go to a <a href="#">travel centre</a>, <a href="#">Payzone store</a> or <a href="#">kiosk</a> and buy it in person.</li>
                    </ul>
                {% endif %}
            </div>
        </div>
    </nav>
{% endcall %}

{% endmacro %}
