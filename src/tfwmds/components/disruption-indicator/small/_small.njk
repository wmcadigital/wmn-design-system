{% macro tfwmdsDisruptionIndicatorSmall(params) %}
{% from "tfwmds/components/icon/_icon.njk" import tfwmdsIcon %}

{% set iconRight = params.iconRight if params.iconRight else 'general-warning-circle' %} {# set icon right classes #}
{% set classes = ' ' + params.classes if params.classes %}

<!-- map pin for {{params.mode}} -->
<span class="tfwmds-disruption-indicator-small{{classes}}">
  {# Get SVG icon for mode #}
  {{
    tfwmdsIcon({
      icon: 'modes-isolated-' + params.mode,
      class: 'tfwmds-disruption-indicator-small__icon'
    })
  }}
  {# Get SVG icon for type #}
  {{
    tfwmdsIcon({
      icon: iconRight,
      class: 'tfwmds-disruption-indicator-small__icon'
    })
  }}
</span>

{% endmacro %}