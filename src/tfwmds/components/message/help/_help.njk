{% macro tfwmdsMsgHelp(params) %}
{% from "tfwmds/components/icon/_icon.njk" import tfwmdsIcon %}
{# Set content #}
{% set _content = params.contentHTML | safe if params.contentHTML else params.contentText %}
{% set dismissable = params.dismissable if params.dismissable === false else true %}

<div class="tfwmds-msg-help">
{% if dismissable %}
  <button class="tfwmds-msg-help__close-btn" aria-label="Close help message">
    {# Get SVG icon #}
    {{-
      tfwmdsIcon({
        icon: 'general-cross',
        class: 'tfwmds-msg-help__close-icon'
      })
    }}
  </button>
  {% endif %}
  {{ _content }}
</div>

{% endmacro %}