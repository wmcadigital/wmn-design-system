{% macro wmndsContactDetails(params) %}
{# Imports #}
{%- from "wmnds/components/warning-text/_warning-text.njk" import wmndsWarningText -%}
{# Set vars #}
{% set title = params.title if params.title else "Transport for West Midlands" %} {# set title #}
{% set warningText = params.warningText if params.warningText %} {# set button text #}
{% set warningIcon = params.warningIcon if params.warningIcon %} {# set button text #}
{% set content = params.content if params.content %} {# set content #}


<div class="wmnds-inset-text">
   <p>{{title}}</p>
   <p>
      {{
         wmndsWarningText({
            text: warningText,
            icon: warningIcon
         }) | indent(6) | trim | safe
      }}
   </p> 
   {{content | safe}}
</div>
{% endmacro %}