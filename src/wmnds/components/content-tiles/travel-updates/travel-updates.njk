{% macro wmndsContentTileTravelUpdates(params) %}
{# Imports #}
{%- from "wmnds/components/disruption-indicator/large/_large.njk" import wmndsDisruptionIndicatorLarge as large -%}
{%- from "wmnds/components/disruption-indicator/medium/_medium.njk" import wmndsDisruptionIndicatorMedium as medium -%}
{%- from "wmnds/components/disruption-indicator/medium/_medium.njk" import wmndsDisruptionIndicatorMedium as star -%}

<div class="wmnds-content-tile wmnds-content-tile__container">
   <h2 class="wmnds-content-tile__title">Travel updates</h2>
   <div class="wmnds-content-tile__copy">
      <p>All routes through this disruption.</p>
   </div>
   <h3>Roads</h3>

   <div class="wmnds-content-tile__container-wrapper">
      {{
         large({
            primaryText: "Hagley Road",
            contentText: 'Usual traffic',
            iconLeft: "modes-isolated-roads",
            iconRight: 'general-success'
         })
      }}
   </div>
   <div class="wmnds-content-tile__container-wrapper">
      {{
         large({
            primaryText: "Ring Road",
            contentText: 'Usual traffic',
            iconLeft: "modes-isolated-roads",
            iconRight: 'general-warning-triangle',
            classes: 'wmnds-disruption-indicator-large--warning'
         })
      }}
   </div>
   <h3>Bus Routes</h3>
   <div class="wmnds-col-1-3 wmnds-col-md-auto">
      <div class="wmnds-content-tile__container-bus">
         {{
            medium({
               contentText: '9',
               iconLeft: "modes-isolated-bus",
               iconRight: 'general-success',
               classes: 'wmnds-disruption-indicator-medium--narrow-travel-updates wmnds-disruption-indicator-medium--narrow-travel-updates-bus'
            })
         }}
         <svg class="wmnds-content-tile__container-star">
            <use xlink:href="/img/wmnds-icons.min.svg#wmnds-general-star-empty" href="/img/wmnds-icons.min.svg#wmnds-general-star-empty"></use>
         </svg>
      </div>
      <div class="wmnds-content-tile__container-bus">
         {{
            medium({
               classes: 'wmnds-disruption-indicator-medium--success wmnds-disruption-indicator-medium--narrow-travel-updates wmnds-disruption-indicator-medium--narrow-travel-updates-bus',
               contentText: '12',
               iconLeft: "modes-isolated-bus",
               iconRight: 'general-success'
            })
         }}
         <svg class="wmnds-content-tile__container-star">
            <use xlink:href="/img/wmnds-icons.min.svg#wmnds-general-star-empty" href="/img/wmnds-icons.min.svg#wmnds-general-star-empty"></use>
         </svg>
      </div>
      <div class="wmnds-content-tile__container-bus">
         {{
            medium({
               classes: 'wmnds-disruption-indicator-medium--warning wmnds-disruption-indicator-medium--narrow-travel-updates wmnds-disruption-indicator-medium--narrow-travel-updates-bus',
               contentText: '13',
               iconLeft: "modes-isolated-bus",
               iconRight: 'general-warning-triangle'
            })
         }}
         <svg class="wmnds-content-tile__container-star">
            <use xlink:href="/img/wmnds-icons.min.svg#wmnds-general-star-empty" href="/img/wmnds-icons.min.svg#wmnds-general-star-empty"></use>
         </svg>
      </div>
      <div class="wmnds-content-tile__container-bus">
         {{
            medium({
               classes: 'wmnds-disruption-indicator-medium--error wmnds-disruption-indicator-medium--narrow-travel-updates wmnds-disruption-indicator-medium--narrow-travel-updates-bus',
               contentText: '126',
               iconLeft: "modes-isolated-bus",
               iconRight: 'general-warning-triangle'
            })
         }}
         <svg class="wmnds-content-tile__container-star">
            <use xlink:href="/img/wmnds-icons.min.svg#wmnds-general-star-empty" href="/img/wmnds-icons.min.svg#wmnds-general-star-empty"></use>
         </svg>
      </div>
      <div class="wmnds-content-tile__container-bus">
         {{
            medium({
               classes: 'wmnds-disruption-indicator-medium--severe wmnds-disruption-indicator-medium--narrow-travel-updates wmnds-disruption-indicator-medium--narrow-travel-updates-bus',
               contentText: 'X10',
               iconRight: "general-warning-triangle",
               iconLeft: "modes-isolated-bus"
            })
         }}
         <svg class="wmnds-content-tile__container-star">
            <use xlink:href="/img/wmnds-icons.min.svg#wmnds-general-star-empty" href="/img/wmnds-icons.min.svg#wmnds-general-star-empty"></use>
         </svg>
      </div>
   </div>
   <div class="wmnds-col-1-3 wmnds-col-md-auto">
      <div class="wmnds-content-tile__container-bus">
         {{
            medium({
               classes: 'wmnds-disruption-indicator-medium--narrow-travel-updates wmnds-disruption-indicator-medium--narrow-travel-updates-bus',
               contentText: '10',
               iconRight: "general-success",
               iconLeft: "modes-isolated-bus"
            })
         }}
         <svg class="wmnds-content-tile__container-star">
