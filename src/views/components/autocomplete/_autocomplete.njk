{% macro wmndsAutocomplete(params) %}
{# Imports #}
{% from "components/icon/_icon.njk" import wmndsIcon %}
{% from "components/disruption-indicator/medium/_medium.njk" import wmndsDisruptionIndicatorMedium %}
{# Params #}
{% set query = params.query if params.query else "" %} {# default to x15 as query text if one isn't available #}
{% set placeholder = params.placeholder if params.placeholder else "Tap to search" %}

{# params.showResults #}

<div class="wmnds-autocomplete wmnds-grid">
  {# Get SVG icon and pass class #}
  {{-
    wmndsIcon({
      icon: 'general-search',
      class: 'wmnds-autocomplete__icon'
    }) | indent(6) | trim
  }}
  {# Loading spinner #}
  {% from "components/loader/_loader.njk" import wmndsLoader %}
  {{
    wmndsLoader({
      customClass: 'wmnds-autocomplete__icon'
    })
  }}


  <input type="text" name="searchExample" aria-label="{{ placeholder }}" class="wmnds-autocomplete__input wmnds-col-1" value="{{ query }}" placeholder="{{ placeholder }}"/>
</div>

{% if params.showResults %}
  <ul class="wmnds-autocomplete-results">
    {%- for i in range(1,4) %}
    <li class="wmnds-autocomplete-results__li" title="Good service on X15">
      <div class="wmnds-col-auto">
        {{
          wmndsDisruptionIndicatorMedium({
            classModifiers: 'wmnds-disruption-indicator-medium',
            text: query
          }) | indent(6) | trim
        }}
      </div>
      <div class="wmnds-col-1-2 wmnds-col-sm-2-3">
        <strong>Oldbury to Dudley {{i}}</strong><br>and return journey
      </div>
    </li>
    {%- endfor %}
  </ul>
{% endif %}




{% endmacro %}