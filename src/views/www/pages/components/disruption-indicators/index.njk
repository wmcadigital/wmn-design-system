      wmndsDisruptionIndicatorLarge({
        comment: '<!-- Train (major disruption) -->',
        classModifier: 'error',
        mode: 'Train',
        strongText: 'Major disruption',
        text: 'Cross City Line',
        iconLeft: 'modes-isolated-rail',
        iconRight: 'general-warning-triangle'
