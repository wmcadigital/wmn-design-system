{% extends "www/_layouts/layout-left-pane.njk" %}
{% set pageTitle = "Disruption indicators" %}
{# Get macros #}
{% from "components/disruption-indicators/map-pin/_map-pin.njk" import wmndsDisruptionMapPin %}
{% from "components/disruption-indicators/service-route/_service-route.njk" import wmndsDisruptionServiceRoute %}
{% from "www/_partials/component-example/component-example.njk" import compExample %}

{% set modes = [
  "bus",
  "coach",
  "cycle",
  "metro",
  "plane",
  "rail",
  "roads",
  "walk"
] %}

{% block content %}
{# Map pin #}
<h2>Map pin</h2>
<p>Intended to be used on a map</p>
{# Minor disruptions #}
<h3>Minor disruption</h3>
{{
  compExample([
    wmndsDisruptionMapPin({
      mode: 'bus'
    }),
    wmndsDisruptionMapPin({
      mode: 'coach'
    }),
    wmndsDisruptionMapPin({
      mode: 'cycle'
    }),
    wmndsDisruptionMapPin({
      mode: 'metro'
    }),
    wmndsDisruptionMapPin({
      mode: 'plane'
    }),
    wmndsDisruptionMapPin({
      mode: 'rail'
    }),
    wmndsDisruptionMapPin({
      mode: 'roads'
    }),
    wmndsDisruptionMapPin({
      mode: 'walk'
    })
  ],
  {
    displayInline: true
  })
}}

{# Major disruptions #}
<h3>Major disruption</h3>
{{
  compExample([
    wmndsDisruptionMapPin({
      mode: 'bus',
      type: 'error'
    }),
    wmndsDisruptionMapPin({
      mode: 'coach',
      type: 'error'
    }),
    wmndsDisruptionMapPin({
      mode: 'cycle',
      type: 'error'
    }),
    wmndsDisruptionMapPin({
      mode: 'metro',
      type: 'error'
    }),
    wmndsDisruptionMapPin({
      mode: 'plane',
      type: 'error'
    }),
    wmndsDisruptionMapPin({
      mode: 'rail',
      type: 'error'
    }),
    wmndsDisruptionMapPin({
      mode: 'roads',
      type: 'error'
    }),
    wmndsDisruptionMapPin({
      mode: 'walk',
      type: 'error'
    })
  ],
  {
    displayInline: true
  })
}}

{# General #}
<h2>General</h2>
{{
  compExample([
    wmndsDisruptionServiceRoute(),
    wmndsDisruptionServiceRoute({
      classModifier: 'warning',
      iconRight: 'general-warning-circle'
    }),
    wmndsDisruptionServiceRoute({
      classModifier: 'severe',
      iconRight: 'general-warning-triangle'
    }),
    wmndsDisruptionServiceRoute({
      classModifier: 'success',
      iconRight: 'general-success'
    }),
    wmndsDisruptionServiceRoute({
      classModifier: 'error',
      iconRight: 'general-warning-triangle'
    })
  ])
}}

{% endblock %}