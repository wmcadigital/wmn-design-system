{% extends "www/_layouts/layout-homepage.njk" %}
{% set pageTitle = "Home" %}
{% set hideBreadcrumb = true %}
{# Imports #}
{% from "tfwmds/components/link/link/_link.njk" import tfwmdsLink %}
{% from "tfwmds/components/content-card/_content-card.njk" import tfwmdsContentCard %}
{% from "tfwmds/patterns/branded-banner/_branded-banner.njk" import tfwmdsBrandedBanner %}
{% from "tfwmds/components/link/as-button/_as-button.njk" import tfwmdsLinkAsButton %}

{# Top/purple section #}
{% block summaryContent %}

  {{
    tfwmdsBrandedBanner({
      title: 'Design and build digital services for transport in the West Midlands',
      contentCol1: "<p class=\"emphasised\">Use this design system to build consistent, usable services. Learn from the research and experience of other teams.</p><br><p>You can use GitHub to <a href=\"https://github.com/wmcadigital/wmn-design-system/blob/master/doc/contributing.md\" title=\"View and contribute code to the Design System on GitHub\" target=\"_blank\" rel=\"noopener noreferrer\" class=\"tfwmds-link tfwmds-website-summary-content__link\">view and contribute code</a>, <a href=\"https://github.com/wmcadigital/wmn-design-system/issues/new?assignees=mrmjprice%2CKaterinaKir&labels=feature_request&template=feature_proposal.md&title=\" title=\"Give feedback or propose an idea about the Design System on GitHub\" target=\"_blank\" rel=\"noopener noreferrer\" class=\"tfwmds-link tfwmds-website-summary-content__link\">give feedback or propose an idea</a>, or <a href=\"https://github.com/wmcadigital/wmn-design-system/issues/new?assignees=&labels=&template=report_bug.md&title=\" title=\"Report an issue with the Design System on GitHub\" target=\"_blank\" rel=\"noopener noreferrer\" class=\"tfwmds-link tfwmds-website-summary-content__link\">report an issue</a>.</p>",
      contentCol2: tfwmdsContentCard({
            contentHTML: "<div class=\"tfwmds-p-sm\"><h2>Current release</h2><p>The current release is <a href=\"https://github.com/wmcadigital/wmn-design-system/releases/tag/v$*version\" title=\"View release notes for version $*version on GitHub\" target=\"_blank\" rel=\"noopener noreferrer\">version $*version</a> which was released on $*releaseDate.</p><p>You can get alerts about new releases by <a href=\"https://docs.github.com/en/free-pro-team@latest/github/managing-subscriptions-and-notifications-on-github/viewing-your-subscriptions\" target=\"_blank\" rel=\"noopener noreferrer\">watching the design system on GitHub</a>.</p></div>"
          }),
      ctaButton: {
        contentText: 'Get started',
        link: '/docs/get-started/',
        linkTitle: 'Get started with the Transport for West Midlands Design System'
      }
    })
  }}
{% endblock summaryContent %}


{% block content %}
{# Internal navigation #}
<div class="tfwmds-grid tfwmds-grid--align-stretch tfwmds-grid--spacing-sm-2-xsm tfwmds-grid--spacing-lg-4-xsm tfwmds-m-t-md tfwmds-m-b-md">
  {# User research #}
  <div class="tfwmds-col-1 tfwmds-col-sm-1-2 tfwmds-col-lg-1-4 tfwmds-p-b-xsm">
    {{
      tfwmdsContentCard({
        link: "/user-research/",
        linkTitle: "User research",
        contentHTML: "<div class=\"tfwmds-p-sm\">
          <h2>User research</h2>
          <p>Start with user needs to build the right thing</p>
        </div>"
      })
    }}
  </div>
  {# Styles #}
  <div class="tfwmds-col-1 tfwmds-col-sm-1-2 tfwmds-col-lg-1-4 tfwmds-p-b-xsm">
      {{
      tfwmdsContentCard({
        link: "/styles/",
        linkTitle: "Styles",
        contentHTML: "<div class=\"tfwmds-p-sm\">
           <h2>Styles</h2>
         <p>Make your service look and feel like Transport for West Midlands</p>
       </div>"
      })
    }}
  </div>
  {# Components #}
  <div class="tfwmds-col-1 tfwmds-col-sm-1-2 tfwmds-col-lg-1-4 tfwmds-p-b-xsm">
        {{
      tfwmdsContentCard({
        link: "/components/",
        linkTitle: "Components",
        contentHTML: "<div class=\"tfwmds-p-sm\">
           <h2>Components</h2>
         <p>Reusable parts of the user interface</p>
       </div>"
      })
    }}
  </div>
  {# Patterns #}
  <div class="tfwmds-col-1 tfwmds-col-sm-1-2 tfwmds-col-lg-1-4 tfwmds-p-b-xsm">
        {{
      tfwmdsContentCard({
        link: "/patterns/",
        linkTitle: "Patterns",
        contentHTML: "<div class=\"tfwmds-p-sm\">
          <h2>Patterns</h2>
         <p>Commonly used sets of components</p>
       </div>"
      })
    }}
  </div>
</div>


<br>
<br>

{# Get help #}
<div class="tfwmds-col-1 tfwmds-col-md-3-4">
  <h2>Get help with using the design system</h2>
  <p>The design system is maintained by the Digital and Data team at West Midlands Combined Authority.</p>
  <p>You can <a href="https://forms.office.com/Pages/ResponsePage.aspx?id=RetZCK7xCk6e-ubWa7tnL0kEZK0X_-9IoNQ__PZJI49UNlBZUFRPNENVTFRWV08xQk1SN0FPR0dDQi4u" title="Ask a question about using the design system" target="_blank" rel="noopener noreferrer">ask a question using this form</a>.</p>
</div>

{% endblock %}