{% extends "www/_layouts/layout-left-pane.njk" %}
{% set pageTitle = "Content Tiles" %}
{% from "www/_partials/component-example/component-example.njk" import compExample %}

{% block content %}
{# Content tile small 1 #}
{%- from "wmnds/components/content-tiles/normal/_normal.njk" import wmndsContentTilesNormal -%}

{# Content tile related content #}
{%- from "wmnds/components/content-tiles/related-content/related-content.njk" import wmndsContentTileRelatedContent -%}

{# Content tile page contents #}
{%- from "wmnds/components/content-tiles/page-contents/page-contents.njk" import wmndsContentTilePageContents -%}

{# Content tile travel tips #}
{%- from "wmnds/components/content-tiles/travel-tips/travel-tips.njk" import wmndsContentTileTravelTips -%}

{# Content tile travel updates #}
{%- from "wmnds/components/content-tiles/travel-updates/travel-updates.njk" import wmndsContentTileTravelUpdates -%}

{# Content tile advice moving #}
{%- from "wmnds/components/content-tiles/advice-moving/advice-moving.njk" import wmndsContentTileAdviceMoving -%}


<h2>Normal</h2>
<h3>General</h3>
{{
  compExample([
    wmndsContentTilesNormal({
      readMore: true
    })
  ])
}}

<h3>Yellow modifier</h3>
{{
  compExample([
    wmndsContentTilesNormal({
      classModifiers: 'wmnds-content-tile--yellow',
      readMore: true
    })
  ])
}}

<h2>Major Works</h2>
{{
  compExample([
    wmndsContentTilesNormal({
      copy: '
      <ul class="wmnds-content-tile__list">
         <li><strong>Location:</strong> Birmingham city centre</li>
         <li><strong>Lasts until:</strong> December 2019</li>
      </ul>
      ',
      readMore: true
    })
  ])
}}

<h2>Iframe (map)</h2>
{{
  compExample([
    wmndsContentTilesNormal({
      copy: '<iframe width="100%" height="500" src="https://tfwm.maps.arcgis.com/apps/MapJournal/index.html?appid=6e52e000bc5d4955b91e9fc48fc920b3&amp;autoplay" frameborder="0" scrolling="no" ></iframe>'
    })
  ])
}}

<h2>Content tile related content</h2>
{{
  compExample([
    wmndsContentTileRelatedContent()
  ])
}}

<h2>Content tile page contents</h2>
{{
  compExample([
    wmndsContentTilePageContents()
  ])
}}

<h2>Content tile travel tips</h2>
{{
  compExample([
    wmndsContentTileTravelTips()
  ])
}}

<h2>Content tile travel updates</h2>
{{
  compExample([
    wmndsContentTileTravelUpdates()
  ])
}}

<h2>Content tile advice to keep moving</h2>
{{
  compExample([
    wmndsContentTileAdviceMoving()
  ])
}}

{% endblock %}