{% macro colorPalette(params) %}

<div class="wmnds-col-1 wmnds-col-sm-1-2 wmnds-col-md-1-3 wmnds-website-color-swatch">
  <span class="wmnds-website-color-swatch__inner wmnds-website-bg-color-{{params.varName}}"></span>
  <div class="wmnds-grid component-details">
    <div class="wmnds-col-1">
      <h3>{{params.name}}</h3>

<pre><code class="scss" tabindex="0">{{- "" -}}
// HEX
<span class="color-hex"></span>

// SCSS VAR
$get-color({{params.varName}});
</code></pre>

    </div>
  </div>
</div>

{% endmacro %}