{% macro compExample(components, params) %}
{% from "tfwmds/components/button/_button.njk" import tfwmdsButton %}
{% from "tfwmds/components/table/_table.njk" import tfwmdsTable %}

{% set components = components if components else [tfwmdsButton({text: "No component specified to example"})] %}
{% set showAsIframe = true if params.iframe else false %}
{% set componentPath = params.componentPath if params.componentPath else false %}

{% set njk = params.njk if params.njk else false %}
{% set js = params.js if params.js else false %}
{% set njkProps = params.njkProps if params.njkProps else false %}

<div class="tfwmds-website-code-example">
  {# Show a button to allow the user to see the component fullscreen #}
  {{
    tfwmdsButton({
      type: 'link',
      classes: 'tfwmds-m-md tfwmds-website-code-example__view-fullscreen',
      contentText: 'See this example in fullscreen'
    })
  }}
  <hr class="tfwmds-m-none" />

  {# PREVIEW COMPONENT #}
  <div class="tfwmds-website-code-example__inner-wrap">
    {# Loop through components passed in and collect in componentsToRender var #}
    {% set componentsToRender %}
      {%- for item in components %}
        {{item | safe}}
        {% if loop.last == false %}
          {% if params.displayInline %}
            <div class="tfwmds-m-b-md tfwmds-website-mar--right"></div>
          {% else %}
            <div class="tfwmds-m-b-md"></div>
          {% endif %}
        {% endif %}
      {% endfor -%}
    {% endset %}

    {# If iframe var set the show components in iframe #}
    {% if showAsIframe %}
      <iframe sandbox="allow-same-origin allow-scripts" title="Component example" class="tfwmds-website-code-example__iframe tfwmds-col-1" src="about:blank" data-src="{{componentsToRender | e | trim}}" frameBorder="0" loading="lazy" allowtransparency="true" scrolling="no" allow="fullscreen" width="100%" data-path="{{componentPath}}"></iframe>
    {% else %}
    {# Else show components like normal #}
      <div class="tfwmds-website-code-example__njk tfwmds-col-1">
        {{componentsToRender | safe}}
      </div>
    {% endif %}
  </div>
  {# END PREVIEW COMPONENT #}


  {# SHOW DETAIL TAB(S) #}

  {# HTML markup #}
  <hr class="tfwmds-m-none" />
  <details class="tfwmds-details">
    <summary class="tfwmds-link tfwmds-p-md">HTML markup</summary>
    {# Be careful with the below, the whitespace is extremely delicate (like a flower ðŸŒ¸) #}
    {# The loop.revindex checks to see if last in array, if not add a linebreak (again, the fight for making nice whitespace continues) #}
    <pre><code class="html" tabindex="0">{% for item in components -%}{{ item | formatHTML }}{% if loop.revindex !== 1 %}<br/>{% endif %}{% endfor -%}</code></pre>
  </details>

  {# Njk markup #}
  {% if njk and componentPath %}
    <hr class="tfwmds-m-none" />
    <details class="tfwmds-details">
      <summary class="tfwmds-link tfwmds-p-md">Nunjucks markup</summary>
      {# Be careful with the below, the whitespace is extremely delicate (like a flower ðŸŒ¸) #}
      <pre><code class="json" tabindex="0">
      {%- filter trim %}
        {%- include componentPath + "_example.njk" -%}
      {% endfilter -%}
      </code></pre>
    </details>
  {% endif %}

  {# Njk props #}
  {% if njkProps %}
    <hr class="tfwmds-m-none" />
    <details class="tfwmds-details">
      <summary class="tfwmds-link tfwmds-p-md">Nunjucks properties</summary>
      <div class="tfwmds-p-md">
        <table class="tfwmds-table tfwmds-p-md">
          <thead>
            <tr>
              <th scope="col">Name</th>
              <th scope="col">Type</th>
              <th scope="col">Description</th>
            </tr>
          </thead>
          <tbody>
            {% for prop in njkProps %}
              <tr>
                <th scope="row" data-header="Name">{{prop.name}}</th>
                <td data-header="Type">{{prop.type}}</td>
                <td data-header="Description">{{prop.description | safe}}</td>
              </tr>
            {% endfor %}
          </tbody>
        </table>

        {% for prop in njkProps %}
        {% if prop.arrayOptions %}
        <h4 class="tfwmds-h3 tfwmds-m-t-lg">Options for {{ prop.name }}</h4>
        <table class="tfwmds-table tfwmds-p-md">
          <thead>
            <tr>
              <th scope="col">Name</th>
              <th scope="col">Type</th>
              <th scope="col">Description</th>
            </tr>
          </thead>
          <tbody>
            {% for item in prop.arrayOptions %}
              <tr>
                <th scope="row" data-header="Name">{{item.name}}</th>
                <td data-header="Type">{{item.type}}</td>
                <td data-header="Description">{{item.description | safe}}</td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
        {% endif %}
        {% endfor %}
      </div>
    </details>
  {% endif %}

  {# JS markup #}
  {% if js and componentPath %}
    <div class="tfwmds-website-code-example__js">
      {# HIDING THIS SECTION until we can compile ES5 for IE11 #}
      {# Show recommended JS (ES2015) #}
      <hr class="tfwmds-m-none" />
      <details class="tfwmds-details tfwmds-details--js">
        <summary class="tfwmds-link tfwmds-p-md">Recommended javascript (browser compatible)</summary>
        <pre><code class="js" tabindex="0">
          {%- filter convertToES5 %}
            {%- include componentPath + "_example.js" -%}
          {% endfilter -%}
        </code></pre>
      </details>

      {# Show recommended JS (ES6) #}
      <hr class="tfwmds-m-none" />
      <details class="tfwmds-details tfwmds-details--es6">
        <summary class="tfwmds-link tfwmds-p-md">Recommended javascript (ES6)</summary>
        <pre><code class="js" tabindex="0">
          {%- filter formatJS %}
            {%- include componentPath + "_example.js" -%}
          {% endfilter -%}
        </code></pre>
      </details>
    </div>
  {% endif %}
</div>

{# END SHOW DETAIL TAB(S) #}


{% endmacro %}
