{% macro compExample(componentPath, params) %}
{% set enableIframeJs = enableIframeJs if params.enableIframeJs else "false" %}

<div class="wmnds-website-code-example">
  <h3 class="wmnds-website-code-example__subtitle">Component example</h3>
  <div class="wmnds-website-code-example__inner-wrap">
    <div class="wmnds-col-1">
      {% if params.iframe %}
      <div class="wmnds-website-code-example__iframe-container wmnds-website-code-example__iframe">
        <iframe sandbox="allow-same-origin allow-scripts" frameborder="0">
        {% endif %}
          {%- for item in componentPath %}
            {{ item }}
            {% if loop.last == false %}
              {% if params.displayInline %}
                <div class="wmnds-m-b-md wmnds-website-mar--right"></div>
              {% else %}
                <div class="wmnds-m-b-md"></div>
              {% endif %}
            {% endif %}
          {% endfor -%}
        {% if params.iframe %}
        </iframe>
        <a href="#" class="wmnds-link wmnds-website-code-example__fullscreen-link">View component full screen</a>
      </div>
      {% endif %}
    </div>
  </div>

  <h3 class="wmnds-website-code-example__subtitle wmnds-m-t-none">HTML Markup</h3>
  {# Be careful with the below, the whitespace is extemely delicate (like a flower ðŸŒ¸) #}
  {# The loop.revindex checks to see if last in array, if not add a linebreak (again, the fight for making nice whitespace continues) #}
  <pre><code class="html" tabindex="0">{% for item in componentPath -%}
  {{ item | forceescape | trim }}{% if loop.revindex !== 1 %}<br/>{% endif %}
  {% endfor -%}</code></pre>
</div>
{% if(params.js) %}
<div class="wmnds-website-code-example">
  <h3 class="wmnds-website-code-example__subtitle wmnds-m-t-none">Recommended javascript</h3>
  <div class="wmnds-code-toggle">
      <strong>Format:</strong> 
      <button class="wmnds-btn wmnds-btn--dark-bg es6">ES6</button>
      <button class="wmnds-btn">Browser compatible JS</button>
  </div>
  <pre><code class="js" data-content="{{ params.js }}" tabindex="0">{{params.js}}</code></pre>
</div>
{% endif %}
<hr>
{% endmacro %}
